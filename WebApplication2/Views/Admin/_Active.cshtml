<table class="table table-responsive caption-top mt-4 hideonmobile">
    <thead>
        <tr class="text-muted">
            <th scope="col">Name</th>
            <th></th>
            <th scope="col">Date Of Birth</th>
            <th scope="col">Requestor</th>
            <th scope="col">Requested Date</th>
            <th scope="col">Phone</th>
            <th scope="col">Address</th>
            <th scope="col">Notes</th>
            <th scope="col">Chat With</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            string str = "";
            @if (item.Requesttypeid == 1)
            {
                str = "background-color : #DA6679 ;color:white;";
            }
            @if (item.Requesttypeid == 2)
            {
                str = "background-color : #3ecc4e ;color:white;";
            }
            @if (item.Requesttypeid == 3)
            {
                str = "background-color : #FFD43B ;color:white;";
            }
            @if (item.Requesttypeid == 4)
            {
                str = "background-color : #3c5bd7 ;color:white;";
            }
            <tr style="@str">
                <td class="font">
                    @item.Firstname @item.Lastname
                </td>
                <td>
                    <span><i class="fa-regular fa-envelope fa-lg"></i></span>
                </td>
                <td class="font">
                    @item.Intdate / @item.Strmonth /@item.Intyear
                </td>
                <td class="font">
                    Patient @item.Firstname,@item.Lastname
                </td>
                <td class="font">
                    @item.Createddate
                </td>
                <td class="font">
                    <button class="btn btn-outline-light"> <i class="fa-solid fa-phone"></i> @item.Phonenumber</button>
                </td>
                <td class="font">
                    @item.Street,@item.City
                </td>
                <td class="font">
                    @item.Notes
                </td>
                <td>
                    <button class="btn btn-outline-light" type="button"><i class="fa-solid fa-user-doctor me-1"></i>Provider</button>
                </td>
                <td>
                    <div class="dropdown">
                        <button class="btn btn-outline-light" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                            Action
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                            <li><a class="dropdown-item" asp-action="View_Case" asp-controller="Admin">@* <span class="glyphicon glyphicon-list-alt"></span> *@ <img src="~/OneDrive_2024-01-17/SRS Screen Shorts/Assign_case.jpg" style="height:15px;" class="me-1" />Assign Case</a></li>
                            <li><a class="dropdown-item" asp-action="View_Case" asp-controller="Admin"><i class="fa-solid fa-xmark me-1"></i>@* <i class="bi bi-x-circle me-2"></i> *@Cancel Case</a></li>
                            <li><a class="dropdown-item" asp-action="View_Case" asp-controller="Admin"><img src="~/OneDrive_2024-01-17/SRS Screen Shorts/keyword.png" style="height:15px;" class="me-1" />View Case</a></li>
                            <li><a class="dropdown-item" asp-action="View_Case" asp-controller="Admin"><img src="~/OneDrive_2024-01-17/SRS Screen Shorts/notebook.png" style="height:15px;" class="me-1" />View Notes</a></li>
                            <li><a class="dropdown-item" asp-action="View_Case" asp-controller="Admin"><i class="fa fa-ban me-1 " aria-hidden="true"></i>Block Patient</a></li>
                        </ul>
                    </div>

                    @* <button class="btn btn-outline-light" type="button">Actions</button> *@
                </td>
            </tr>
        }
    </tbody>
</table>
