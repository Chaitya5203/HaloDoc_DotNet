<div class="row g-2 mt-2 pt-2 pb-3 bg-white shadow rounded-1">
    <div class="col-lg-2 col-md-6 col-sm-12">
        <i class="fa fa-search text-muted position-absolute" style="padding-top:10px; padding-left:10px;"></i>
        <input type="search" class="form-control floatingInputGrid" style="padding-left:35px;" id="my-search-input" placeholder="Search Patients">
    </div>
    <div class="col-lg-2 col-md-6 col-sm-12">
        <select class="form-select" id="floatingSelectGrid">
            <option selected>All Regions</option>
            <option value="1">Surat</option>
            <option value="2">Ahmedabad</option>
            <option value="3">Anand</option>
        </select>
    </div>
    <div class="col-lg-8 col-md-12 col-sm-12">
        <div class="text-end d-md-flex justify-content-md-end ">
            <button class="hideonmobile btn btn-white" style="border-color:gainsboro;" type="button" id="all">All</button>
            <span class="p-2 border-info" type="button" id="patientdata"><i class="fa-solid fa-circle fa-xs me-2" style="color: #3ecc4e;"></i>Patient</span>
            <span class="p-2" type="button" id="familydata"><i class="fa-solid fa-circle fa-xs me-2" style="color: #FFD43B;"></i>Family/Freind</span>
            <span class="p-2 border-info" type="button" id="businessdata"><i class="fa-solid fa-circle fa-xs me-2" style="color: #DA6679;"></i>Business</span>
            <span class=" p-2 " type="button" id="conciergedata"><i class="fa-solid fa-circle fa-xs me-2" style="color: #3c5bd7;"></i>Concierge</span>
            @* <span class="p-2 " type="button"><i class="fa-solid fa-circle fa-xs me-2" style="color: #6d4bd2;"></i>VIP</span> *@
        </div>
    </div>
</div>
<table class="table table-responsive caption-top mt-4 hideonmobile" id="adminTable">
    <thead>
        <tr class="text-muted">
            <th scope="col">Name</th>
            <th></th>
            <th scope="col">Date Of Birth</th>
            <th scope="col">Requestor</th>
            <th scope="col">Physician Name</th>
            <th scope="col">Date Of Service</th> 
            <th scope="col">Phone</th>
            <th scope="col">Address</th>
            <th scope="col">Notes</th>
            <th scope="col">Chat With</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            string str = "";
            @if (item.Requesttypeid == 1)
            {
                str = "background-color : #DA6679 ;color:white;";
            }
            @if (item.Requesttypeid == 2)
            {
                str = "background-color : #3ecc4e ;color:white;";
            }
            @if (item.Requesttypeid == 3)
            {
                str = "background-color : #FFD43B ;color:white;";
            }
            @if (item.Requesttypeid == 4)
            {
                str = "background-color : #3c5bd7 ;color:white;";
            }
            <tr style="@str">
                <td class="font">
                    @item.Firstname @item.Lastname
                </td>
                <td>
                    <span><i class="fa-regular fa-envelope fa-lg"></i></span>
                </td>
                <td class="font">
                    @item.Intdate / @item.Strmonth /@item.Intyear
                </td>
                <td class="font">
                    Patient @item.Firstname,@item.Lastname
                </td>
                <td class="font">
                    Dr. Agola
                </td>
                <td class="font">
                    @item.Createddate
                </td>
                <td class="font">
                    <button class="btn btn-outline-light"> <i class="fa-solid fa-phone"></i> @item.Phonenumber</button>
                </td>
                <td class="font">
                    @item.Street,@item.City
                </td>
                <td class="font">
                    @item.Notes
                </td>
                <td>
                    <button class="btn btn-outline-light" type="button"><i class="fa-solid fa-user-doctor me-1"></i>patient</button>
                    <button class="btn btn-outline-light" type="button"><i class="fa-solid fa-user-doctor me-1"></i>Provider</button>
                </td>
                <td>
                    <div class="dropdown">
                        <button class="btn btn-outline-light" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                            Action
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                            <li><a class="dropdown-item" asp-action="View_Case" asp-controller="Admin" asp-route-id="@item.Requestid"><img src="~/OneDrive_2024-01-17/SRS Screen Shorts/keyword.png" style="height:15px;" class="me-1" />View Case</a></li>
                            <li><a class="dropdown-item"><img src="~/OneDrive_2024-01-17/SRS Screen Shorts/keyword.png" style="height:15px;" class="me-1" />View Uploads</a></li>

                            <li><a class="dropdown-item" asp-action="View_Note" asp-controller="Admin"><img src="~/OneDrive_2024-01-17/SRS Screen Shorts/notebook.png" style="height:15px;" class="me-1" />View Notes</a></li>
                            <li><a class="dropdown-item"><img src="~/OneDrive_2024-01-17/SRS Screen Shorts/keyword.png" style="height:15px;" class="me-1" />Orders</a></li>
                            <li><a class="dropdown-item"><img src="~/OneDrive_2024-01-17/SRS Screen Shorts/keyword.png" style="height:15px;" class="me-1" />Doctor Note</a></li>

                            <li><a class="dropdown-item" data-bs-toggle="modal" data-bs-target="#exampleModal1"><img src="~/OneDrive_2024-01-17/SRS Screen Shorts/Assign_case.jpg" style="height:15px;" class="me-1" />Encounter</a></li>
                        </ul>
                    </div>

                    @* <button class="btn btn-outline-light" type="button">Actions</button> *@
                </td>
            </tr>
        }
    </tbody>
</table>
